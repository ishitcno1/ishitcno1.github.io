</span><span class='line'><span class="n">item</span><span class="o">.</span><span class="na">setMarker</span><span class="o">(</span><span class="n">mark</span><span class="o">);</span>
</span><span class='line'><span class="n">MarkOverlay</span> <span class="n">markOverlay</span> <span class="o">=</span> <span class="k">new</span> <span class="nf">MarkOverlay</span><span class="o">(</span><span class="n">mark</span><span class="o">,</span> <span class="n">mapView</span><span class="o">);</span>
</span><span class='line'><span class="n">markOverlay</span><span class="o">.</span><span class="na">add</span><span class="o">(</span><span class="n">item</span><span class="o">);</span>
</span><span class='line'><span class="n">mapView</span><span class="o">.</span><span class="na">getOverlays</span><span class="o">().</span><span class="na">clear</span><span class="o">();</span>
